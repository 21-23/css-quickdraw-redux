@import '../../../stylesheets/color-palette'

bottom-separator = 1px solid separator-color
bottom-separator-shadow = 0 1px 4px 0 rgba(0, 0, 0, 0.12)
logo-shadow = 0 1px 4px rgba(0, 0, 0, 0.4)

.user-panel
	display flex
	justify-content space-between
	align-items center
	color holy-white

	box-sizing border-box
	padding 0 main-left-offset 0 main-right-offset
	border-bottom bottom-separator
	box-shadow bottom-separator-shadow
	background url('../img/header-bg.png') repeat-x

	.logo
		flex-grow 1
		min-width 100px
		
	.user-info
		flex-grow 5
		text-align right
	
	.log-out
		min-width 100px
		text-align right
