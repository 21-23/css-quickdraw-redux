@import '../../common/stylesheets/color-palette'
@import '../../common/stylesheets/common'

light-shadow = 0px 1px 1px rgba(0, 0, 0, 0.5)

.game-master-screen
	.user-panel
		width 100%
		height user-panel-height

.game-master-screen-container
	padding 0 main-left-offset 0 main-right-offset

	.game-master-screen-columns
		display flex
		justify-content space-between

		.controls-column
			flex-grow 1.8

			.levels-info-num
				color secondary-text-color
				text-shadow light-shadow

			.levels-info-name
				color main-text
				font-weight bold

		.user-list-column
			flex-grow 1
			max-width 150px

	.client-url
		width 70%
		background black-velours
		border 1px solid holy-white
		padding 2px 5px

	.qd-pearl-thread
		width 100%
		margin-bottom 1em

	.master-controls-container
		display flex

		.players-list, .master-controls
			width 50%

		.master-controls-solution-container
			font-size 1.5em
			margin-top 0.5em

			.solution-value
				color fresh-dollar

		.controls-selector-banned-container
			font-size 1.5em

			.qd-occurrence-indicator
				color nectarine

		.players-list
			.aggregate-score-item
				display flex
				background black-gold
				margin-bottom 1px
				font-size 1.4em
				line-height 1.5em

				&.prize
					background old-dollar
				&.grand-prix
					background dark-gold

				.aggregate-score-player-name
					flex-grow 4

				.aggregate-score-player-score
					flex-grow 1
					text-align right

	.master-controls-timings
		display flex
		align-items center

		.round-title
			flex-grow 4
			line-height 1.2em
			font-size 1.5em
			overflow hidden

		.timespan
			font-size 3em
			margin-left 0.5em
			line-height 1.2em
			color holy-white

	.master-controls-gameplay
		display flex
		justify-content space-between

	.controls-selector-banned-container
		display flex
		align-items center

