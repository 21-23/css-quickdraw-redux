@import '../../common/stylesheets/color-palette'
@import '../../common/stylesheets/common'

light-shadow = 0px 1px 1px rgba(0, 0, 0, 0.5)
user-list-column-max-width = 300px

.game-master-screen
	.user-panel
		width 100%
		height user-panel-height

.game-master-screen-container
	padding 0 main-left-offset 0 main-right-offset

	.game-master-screen-columns
		display flex
		justify-content space-between

		.controls-column
			flex-grow 1.5

			.level-control-info
				display flex
				justify-content space-between
				margin-bottom 20px

			.levels-info-num
				color secondary-text-color
				text-shadow light-shadow

			.levels-info-name
				color main-text
				font-weight bold

		.user-list-column
			flex-grow 1
			max-width user-list-column-max-width

			.aggregate-score
				.header, .aggregate-score-item
					display flex
					justify-content space-between
					line-height 2.5em
					border-bottom 2px solid separator-color

				.header
					color secondary-text-color

				.aggregate-score-item
					color holy-white

	.qd-pearl-thread
		width 100%
		margin-bottom 1em

	.master-controls-container
		display flex

		.master-controls-solution-container
			font-size 1.5em
			margin-top 0.5em

	.master-controls-gameplay
		display flex
		justify-content space-between

	.controls-selector-banned-container
		display flex
		align-items center

