@import '../../common/stylesheets/color-palette'

.game-master-screen
	.user-panel
		width 100%

.game-master-screen-container
	width 96%
	margin auto

	.qd-pearl-thread
		width 100%

	.master-controls-container
		display flex

		.players-list, .master-controls
			width 50%

	.master-controls-timings
		display flex
		align-items center

		.round-title
			flex-grow 4
			line-height 1.2em
			font-size 1.5em
			overflow hidden

		.timer
			font-size 3em
			margin-left 0.5em
			line-height 1.2em

	.master-controls-gameplay
		display flex
		justify-content space-between

//NON-PRODUCTION styles; only for testing
.user-panel
	background #888
.qd-pearl-thread
	background #da5
	div
		display inline-block
		margin-right 20px
.master-controls
	background #4fa
.round-title
	background #efa
.master-controls-gameplay
	background #555
.master-controls-solution-container
	background #81e
.controls-selector-banned-container
	background #319
.master-controls-puzzle
	background #eea
