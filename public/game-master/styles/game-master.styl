.game-master-screen
	.user-panel
		width: 100%

.game-master-screen-container
	width: 96%
	margin: auto
	
	.qd-pearl-thread
		width: 100%
	
	.master-controls-container
		display: flex
		
		.players-list, .master-controls
			width: 50%
			padding: 10px
	
	.master-controls-timings
		display: flex
		align-items: stretch
		flex-flow: row nowrap
		
		.round-title
			flex-grow: 4
		.round-timer
			flex-grow: 1
	
	.master-controls-gameplay
		display: flex
		flex-flow: row nowrap
		justify-content: space-between

