@import '~common/stylesheets/color-palette'
@import '~common/stylesheets/common'

light-shadow = 0 1px 4px rgba(0, 0, 0, .15)
user-list-column-max-width = 400px

.game-master-screen
	.user-panel
		width 100%
		height user-panel-height

.game-master-screen-container
	position absolute
	top user-panel-height
	bottom 0
	left 0
	right 0
	padding 0 main-left-offset 0 main-right-offset

	.puzzles-progress
		margin-bottom 1.3em

	.game-master-screen-columns
		display flex
		justify-content space-between
		max-height 80%

		.controls-column
			flex-grow 1.5

			.level-control-info
				position relative
				display flex
				justify-content space-between
				margin-bottom 20px

				.countdown-circle
					position absolute
					right 0
					font-size 2.5em

			.levels-info-num
				color secondary-text-color
				text-shadow light-shadow
				font-size 1.5em
				margin 0 .3em 0 0

			.levels-info-name
				color main-text
				font-weight bold
				text-shadow light-shadow
				font-size 1.5em
				margin .4em 0

		.user-list-column
			flex-grow 1
			max-width user-list-column-max-width
			margin-left 5%
			position relative
			overflow-y auto
			overflow-x hidden
			white-space nowrap

			.players-list, .players-scores-list
				vertical-align top
				display inline-block
				width 100%
				transform translateX(0)
				transition transform 250ms

			&.-score-view
				.players-list, .players-scores-list
					transform translateX(-100%)

	.scores-toggle-button-container
		position absolute
		right main-right-offset * 0.5
		top 0
		height 100%
		display flex

		.toggle-button
			color secondary-action-color
			background alpha(holy-white, .15)
			font-size 3em
			padding 0 .1em
			align-self center

			&:before
				content '\f104'
				font-family AwesomeIcon
			&.-toggled
				&:before
					content '\f105'

			&:hover
				background secondary-action-background-color

	.master-controls-container
		position absolute
		left 0
		bottom 0
		opacity .05

	.master-controls-solution-container
		.solution-container
			display inline-block
			color secondary-text-color
			text-shadow light-shadow

			.solution-value
				font-weight bold
				color main-text
				opacity 0

			&:hover
				.solution-value
					opacity 1
					transition opacity 100ms 500ms

		.match-renderer
			border-top 1px solid separator-color

	.master-controls-gameplay
		display flex
		justify-content space-between
		flex-direction column

	.controls-selector-banned-container
		display flex
		align-items center
		color secondary-text-color
		text-shadow light-shadow
		min-height 35px
