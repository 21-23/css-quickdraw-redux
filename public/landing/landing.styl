landing-background = #000

landing-tagline-color = #fff
landing-tagline-font-size = 2em
landing-tagline-font-family = Monospace, Consolas, "Menlo Regular"

landing-scroll-down-arrow-width = 7%
landing-scroll-down-arrow-height = 60px

main-background = #fff

main-app-name-color = #fff
main-app-name-font-size = 3em

green-main = #349161

body
	background landing-background no-repeat
	background-size cover

.tagline
	color landing-tagline-color
	font-family landing-tagline-font-family
	font-size landing-tagline-font-size
	margin 1em
	position absolute
	top 0px
	left 0px
	
	.line
		margin 0.5em;
	
	.line-2
		margin-left landing-tagline-font-size

.scroll-down-container
	position: relative
	top: 100vh
	width landing-scroll-down-arrow-width
	height landing-scroll-down-arrow-height
	margin auto
	transform: translateY(- landing-scroll-down-arrow-height)
	
	.scroll-down-arrows
		width 100%
		height 100%

		.scroll-down-arrow
			stroke: #fff
			stroke-width: 3px
			animation scroll-down-arrow 1.5s infinite
			
			&.arrow-1
				animation-delay -0.6s
			&.arrow-2
				animation-delay -0.3s
			&.arrow-3
				animation-delay 0s

@keyframes scroll-down-arrow {
	0% {
		opacity 0
	}
	40% {
		opacity 1
	}
	80% {
		opacity 0
	}
	100% {
		opacity 0
	}
}

//------------------- Main Page -----------------------------

.main
	position relative
	top 100vh
	text-align center
	background main-background
	
	.app-name
		color main-app-name-color
		background landing-background
		border-bottom: 5px solid green-main;
		margin 0px
		font-size main-app-name-font-size
		line-height main-app-name-font-size / 2
