@import '~common/stylesheets/color-palette'
@import '~common/stylesheets/common'

light-shadow = 0 1px 4px 0 rgba(0, 0, 0, 0.15)

.game-screen
	.user-panel
		width 100%
		height user-panel-height

.game-screen-container
	padding 0 main-left-offset 0 main-right-offset

	.levels-info-num
		color secondary-text-color
		text-shadow light-shadow

	.levels-info-name
		color main-text
		font-weight bold
		text-shadow light-shadow

	.controls
		width 100%
		display flex
		justify-content space-between
		align-items stretch
		flex-wrap wrap
		margin .8em 0

	.controls-selector-banned-container
		display flex
		width 100%
		align-items center
		color secondary-text-color
		text-shadow light-shadow

	.controls-selector-input
		flex 1
		box-sizing border-box
		outline none
		padding 10px
		background lighter-than-background
		border 1px solid lighter-than-background-border
		border-radius 3px
		color holy-white

		&:disabled
			background lighter-than-background-disabled
			color holy-white-disabled
		&:focus
			border 1px solid alpha(main-text, 0.4)
			box-shadow 0 0 4px 0px alpha(main-text, 0.2) inset, 0 0 4px 0px alpha(main-text, 0.2)

		&::placeholder
			color secondary-text-color

	.timespan
		font-size 3em
		margin-left .3em

	.success-marker
		color fresh-dollar
		font-size 3em

@media (orientation portrait)
	.game-screen-container
		width 96%

