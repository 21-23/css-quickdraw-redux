@import '~common/stylesheets/color-palette'
@import '~common/stylesheets/common'

light-shadow = 0px 1px 1px rgba(0, 0, 0, 0.5)

.game-screen
	.user-panel
		width 100%
		height user-panel-height

.game-screen-container
	padding 0 main-left-offset 0 main-right-offset

	.levels-info-num
		color secondary-text-color
		text-shadow light-shadow

	.levels-info-name
		color main-text
		font-weight bold

	.controls
		width 100%
		display flex
		justify-content space-between
		align-items stretch
		flex-wrap wrap
		margin .8em 0

	.controls-selector-banned-container
		display flex
		width 100%
		align-items center
		color secondary-text-color
		text-shadow light-shadow

	.controls-selector-input
		flex 1
		box-sizing border-box
		outline none
		padding 20px
		background lighter-than-background
		border 1px solid lighter-than-background-border
		border-radius 3px
		color holy-white
		align-self center

		&:disabled
			background lighter-than-background-disabled
			color holy-white-disabled

		&::placeholder
			color secondary-text-color

	.countdown-circle
		font-size 1.5em
		margin-left 1em

	.success-marker
		color fresh-dollar
		font-size 3em

@media (orientation portrait)
	.game-screen-container
		width 96%

