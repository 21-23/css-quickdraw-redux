@import '../../common/stylesheets/color-palette'
@import '../../common/stylesheets/common'

light-shadow = 0px 1px 1px rgba(0, 0, 0, 0.5)

.game-screen
	.user-panel
		width 100%
		height user-panel-height

.game-screen-container
	padding 0 main-left-offset 0 main-right-offset

	.levels-info-num
		color secondary-text-color
		text-shadow light-shadow

	.levels-info-name
		color main-text
		font-weight bold

	.controls
		width 100%
		display flex
		justify-content space-between
		align-items stretch
		flex-wrap wrap
		margin .8em 0

	.controls-selector-banned-container
		display flex
		width 100%
		align-items center
		color secondary-text-color

	.timespan
		font-size 3em
		margin-left .3em

	.success-marker
		color fresh-dollar
		font-size 3em

	.controls-selector-input
		flex 1
		box-sizing border-box
		outline none
		padding 10px

	.success-overlay
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background fog-60

		.success-message
			position absolute
			font-size 3em
			bottom 1em
			left 0
			width 100%
			font-weight bold
			text-align center
			background fog-80
			border 1px solid old-dollar
			border-width 1px 0px
			color fresh-dollar

@media (orientation portrait)
	.game-screen-container
		width 96%

