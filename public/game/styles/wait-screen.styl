@import '../../common/stylesheets/color-palette'

wait-screen-bg-image = '../img/hat-on-boots.jpg'

wait-screen-header-font-size = 3em
wait-screen-sub-header-font-size = 2.5em
wait-screen-headers-margin = 5%

.game-wait-screen-container
	color holy-white
	position absolute
	top	0
	left 0
	width 100%
	height 100%
	background url(wait-screen-bg-image)
	background-size: cover;
	background-repeat: no-repeat
	
	.game-wait-screen-header, .game-wait-screen-sub-header
		text-align right
		margin wait-screen-headers-margin

	.game-wait-screen-header
		font-size wait-screen-header-font-size
	
	.game-wait-screen-sub-header
		font-size wait-screen-sub-header-font-size
